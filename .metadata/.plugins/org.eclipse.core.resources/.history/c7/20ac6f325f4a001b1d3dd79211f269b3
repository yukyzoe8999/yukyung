package Java_1230_test;

import java.util.Scanner;

public class Coding_4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		boolean on = true;
		boolean on_2 = true;
		boolean on_3 = true;

		int chal = 1;
		int sound = 0;
		String name = "";

		while (on) {
			System.out.println("TV전원을 켜시겠습니까?" + "1. 네 2. 아니오");
			int i = sc.nextInt();
			if (i == 1) {
				System.out.println("전원을 켰습니다.");

				while (on_2) {
					System.out.println("1. 채널선택 2. 볼륨조절 3. TV끄기");

					while (on_3) {
						on_3 = true;
						int j = sc.nextInt();
						switch (j) {
						case 1:
							System.out.println("1.채널을 올린다 2. 채널을 내린다 3. 뒤로가기");
							int k = sc.nextInt();
							switch (k) {
							case 1:
								chal++;
								break;
							case 2:
								chal--;
								break;
							case 3:
								on_3 = false;
							}
							System.out.println("현재채널: " + chal);
						case 2:
							System.out.println("1.볼륨을 올린다 2. 볼륨을 내린다 3. 뒤로가기");
							int y = sc.nextInt();
							switch (y) {
							case 1:
								sound++;
							case 2:
								sound--;
							case 3:
								on_3 = false;

							}
						case 3:
							on_2 = false;
						}
					}
				}

			} else if (i == 2) {
				System.out.println("전원을 키지 않는다.");
			}
		}

	}

}
